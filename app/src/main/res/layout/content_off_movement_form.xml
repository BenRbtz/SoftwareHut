<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:windowSoftInputMode="adjustResize|stateHidden"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alpha.team.farmerseasylog.offMovementForm"
    tools:showIn="@layout/activity_off_movement_form">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/herdIDOff"
        android:layout_marginTop="63dp"
        android:hint="Herd Number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/barIDOff"
        android:layout_below="@+id/herdIDOff"
        android:layout_alignStart="@+id/herdIDOff"
        android:hint="Bar Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/colourIDOff"
        android:hint="Colour"
        android:layout_below="@+id/sexIDOff"
        android:layout_alignStart="@+id/sexIDOff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sexIDOff"
        android:hint="Sex"
        android:layout_below="@+id/barIDOff"
        android:layout_alignStart="@+id/barIDOff"
        android:textIsSelectable="true"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/birthDateOff"
        android:hint="Date Of Birth"
        android:layout_below="@+id/colourIDOff"
        android:layout_alignStart="@+id/colourIDOff"
        android:textIsSelectable="true"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/breedIDOff"
        android:layout_below="@+id/birthDateOff"
        android:layout_alignStart="@+id/birthDateOff"
        android:hint="Breed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/sendButtonOff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Off Movement Form"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/herdIDOff"
        android:layout_alignEnd="@+id/herdIDOff" />
</RelativeLayout>
